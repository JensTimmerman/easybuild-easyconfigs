name = 'SPAdes'
version = '3.0.0'

easyblock = 'CMakeMake'

homepage = 'http://bioinf.spbau.ru/en/spades'
description = """SPAdes – St. Petersburg genome assembler – is intended for both standard isolates and single-cell MDA
 bacteria assemblies."""

toolchain = {'name': 'goolf', 'version': '1.4.10'}

source_urls = ['http://spades.bioinf.spbau.ru/release%(version)s']
sources = [SOURCE_TAR_GZ]

dependencies = [
    ('CMake', '2.8.11'),
    ('zlib', '1.2.7'),
]

srcdir = 'src'
separate_build_dir = True
configopts = '-G "Unix Makefiles"'
runtest = 'spades.py --test'

sanity_check_paths = {
    'files': ["bin/%s" %x for x in 'bwa-spades', 'dipspades', 'dipspades.py', 'hammer', 'ionhammer', 'spades', 'spades_init.py', 'spades.py'],
    'dirs': ['share'],
}
moduleclass = 'bio'
